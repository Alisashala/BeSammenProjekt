<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name=".MainActivity" >

    <TextView
        android:id="@+id/userInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="646dp"
        android:text="Log out" />

    <ImageView
        android:id="@+id/privateChat"
        android:layout_width="103dp"
        android:layout_height="90dp"
        android:layout_below="@+id/groupChat"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="privateChat"
        android:layout_marginStart="154dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="330dp"
        app:srcCompat="@drawable/chatting" />

    <ImageView
        android:id="@+id/groupChat"
        android:layout_width="103dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="groupChat"
        android:layout_marginStart="155dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="154dp"
        app:srcCompat="@drawable/group__1_" />


</RelativeLayout>
